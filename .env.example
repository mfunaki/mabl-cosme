# OpenAI API Key (バックエンド用 - コミットしないこと)
# https://platform.openai.com/api-keys から取得できます
OPENAI_API_KEY=sk-your-api-key-here

# Basic認証の設定 (オプション)
# 設定すると、アプリケーション全体にBasic認証が適用されます
# 未設定の場合は認証なしでアクセス可能になります
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=your-secure-password

# アプリケーション認証（サーバーサイドJWT認証）
# /api/login エンドポイントで使用されます
# 未設定の場合はデフォルト値 demo / demo123 が使用されます
AUTH_USERNAME=demo
AUTH_PASSWORD=demo123

# JWT署名用シークレット（本番環境では必ず変更してください）
# 未設定の場合はデフォルト値が使用されます
JWT_SECRET=your-jwt-secret-key

# 開発時のモックモード (オプション)
VITE_USE_MOCK_AI=false
